@model IEnumerable<LibraryWebApplication.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookName)
        </th>
        <th>
            ReleaseDate
        </th>
        <th>
            PagesNumber
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubCategory)
        </th>
        <th>
            Price
        </th>
        <th>
            Count
        </th>
        <th>
            Author
        </th>
        <th>
            Category
        </th>
        <th>
            PlaceName
        </th>
        <th>
            Publisher
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookName)
        </td>
        <td>
            
            @Html.DisplayFor(modelItem => item.StringDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookPagesNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author.AuthorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Place.PlaceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher.PublisherName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.BookID }, new { @class = "btn btn-warning" })
            <hr class="m-1 bg-white"/>
            @Html.ActionLink("Details", "Details", new { id = item.BookID }, new { @class = "btn btn-info" })
            <hr class="m-1 bg-white" />
            @Html.ActionLink("Delete", "Delete", new { id = item.BookID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
